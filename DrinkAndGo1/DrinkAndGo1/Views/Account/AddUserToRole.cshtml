
@model DrinkAndGo1.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Add User To Role</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.DropDownListFor(m => m.Role, new SelectList(Model.roles), new { @class = "form-control" })
    </div>
    <button class="btn btn-success" type="submit">Save</button>
}
